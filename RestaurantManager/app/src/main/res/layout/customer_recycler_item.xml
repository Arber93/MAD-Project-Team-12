<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cr_card_view"
    tools:context="it.polito.mad.team12.restaurantmanager.CustomerMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cr_restaurant_image"
            android:layout_width="@dimen/cardview_image_width"
            android:layout_height="@dimen/cardview_image_height"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/cr_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/title_font_size"
                style="@style/CardViewText"
                />
            <!--android:text="Name"-->

            <TextView
                android:id="@+id/cr_restaurant_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cr_restaurant_name"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/subtitle_font_size"
                style="@style/CardViewText"
                />
            <!--android:text="This is a sample description."-->



        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>