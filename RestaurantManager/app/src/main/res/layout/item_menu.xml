<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="it.polito.mad.team12.restaurantmanager.MenuTabFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/mt_item_image"
            android:layout_width="@dimen/cardview_image_width"
            android:layout_height="@dimen/cardview_image_height"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/mt_item_name"
                style="@style/CardViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/title_font_size"
                />
            <!--android:text="Name"-->

            <TextView
                android:id="@+id/mt_item_description"
                style="@style/CardViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mt_item_name"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/subtitle_font_size"
                />
            <!--android:text="This is a sample description."-->

            <TextView
                android:id="@+id/mt_item_price"
                style="@style/CardViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/subtitle_font_size"
                android:layout_alignBaseline="@id/mt_item_name"
                />
            <!--android:text="2.95 EURO"-->
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>