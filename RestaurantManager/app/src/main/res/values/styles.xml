<resources>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardViewText">
        <item name="android:paddingLeft">@dimen/default_left_padding</item>
        <item name="android:paddingRight">@dimen/default_right_padding</item>
        <item name="android:paddingTop">@dimen/card_view_top_padding</item>
        <item name="android:paddingBottom">@dimen/card_view_bottom_padding</item>
    </style>

    <style name="CardViewIcon">
        <item name="android:padding">@dimen/default_icon_padding</item>
    </style>

    <style name="TextViewTitleStylePadded" parent="TextViewTitleStyle">
        <item name="android:paddingTop">@dimen/default_top_padding</item>
        <item name="android:paddingBottom">@dimen/default_bottom_padding</item>
    </style>

    <style name="TextViewTitleStyle">
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="TextViewSubtitleStylePadded" parent="TextViewSubtitleStyle">
        <item name="android:paddingTop">@dimen/default_top_padding</item>
        <item name="android:paddingBottom">@dimen/default_bottom_padding</item>
        <item name="android:paddingLeft">@dimen/default_left_padding</item>
        <item name="android:paddingRight">@dimen/default_right_padding</item>
    </style>

    <style name="TextViewSubtitleStyle">
        <item name="android:textSize">@dimen/subtitle_font_size</item>
        <item name="android:textColor">@color/subtitle_text_color</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textSize">@dimen/dialog_title_text_size</item>
        <item name="android:textColor">@color/dialog_text_color</item>
    </style>

    <style name="DialogItemStyle">
        <item name="android:textSize">@dimen/dialog_item_text_size</item>
        <item name="android:textColor">@color/dialog_text_color</item>
    </style>

    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/horizontal_divider_height</item>
        <item name="android:background">@color/horizontal_divider_color</item>
        <item name="android:paddingTop">@dimen/horizontal_divider_top_padding</item>
        <item name="android:paddingBottom">@dimen/horizontal_divider_bottom_padding</item>
    </style>

    <style name="FoodRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <style name="FoodRatingBarLittle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>

    <style name="ToolbarStyle"></style>
</resources>
