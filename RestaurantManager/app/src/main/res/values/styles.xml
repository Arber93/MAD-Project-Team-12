<resources>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/holo_blue_dark</item>
    </style>




    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name ="CardViewText">
        <item name="android:paddingLeft">@dimen/default_left_padding</item>
        <item name="android:paddingRight">@dimen/default_right_padding</item>
        <item name="android:paddingTop">@dimen/card_view_top_padding</item>
        <item name="android:paddingBottom">@dimen/card_view_bottom_padding</item>
    </style>

    <style name="CardViewIcon">
        <item name="android:padding">@dimen/default_icon_padding</item>
    </style>

    <style name="TitleStyle">
        <item name="android:paddingTop">@dimen/default_top_padding</item>
        <item name="android:paddingBottom">@dimen/default_bottom_padding</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="FieldStyle">
        <item name="android:paddingTop">@dimen/default_top_padding</item>
        <item name="android:paddingBottom">@dimen/default_bottom_padding</item>
        <item name="android:textSize">@dimen/field_font_size</item>
        <item name="android:paddingRight">@dimen/default_right_padding</item>
        <item name="android:paddingLeft">@dimen/default_left_padding</item>
        <item name="android:textColor">@color/field_text_color</item>
    </style>

    <style name="FoodRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <style name="FoodRatingBarLittle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating_bar_full</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>


    <color name="title_text_color">@android:color/black</color>
    <color name="field_text_color">@android:color/black</color>
</resources>
